.wxSearch{
  position: absolute;
  top: 43rpx;
  left: 0;
  width: 100%;
  height: 100%;
  border-top: 1rpx #eee solid;
  background-color: rgba(0, 0, 0, 0.2);
}
.wxSearchInner{
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 1rem;
}
.wxSearch-section{
  background-color: #fff;
  padding: 5rpx 10rpx;
}
.wxSearch-pancel{
  display: flex;
  flex-direction: row;
}
.wxSearch-input{
  flex: 8; 
  background-color: #eee;
  padding: 5rpx 10rpx;
  border-radius: 5px;
}
.wxSearch-button{
  flex: 1;
  border: none !important;
  color: cornflowerblue !important;
}

.wxSearchTitle{
  padding:  .4rem 0;
  font-size: 12rpx;
  text-align: left;
  color: #bbb;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
}


.wxSearchMindKeyItem{
  padding: 10rpx 5rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  font-size: 14rpx;
  color: cornflowerblue;
}

.wxSearchKeyList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: .4rem 0;
}

.wxSearchKeyItem{
  flex: 0 0 20%;
  font-size: 14rpx;
  text-align: center;
  border: 1rpx solid #eee;
  margin: 5rpx;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
}
.wxSearchHistoryItem{
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
  display: flex;
}
.wxSearchHistoryItemText{
  flex: 8;
  font-size: 14rpx;
}
.wxSearchHistoryItemDel{
  flex: 1;
  font-size: 12rpx;
  text-align: center;
  padding: 3rpx 5rpx;
  border: 1rpx solid #eee;
  border-radius: 5rpx;
}
.wxSearchHistoryEmpty{
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 12rpx;
}
.wxSearchDeleteAllBtn{
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 12rpx;
}