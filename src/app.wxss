
html {
  font-size: 10px;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.article .article__title {
  font-size: 1.2rem;
  margin: .4rem 0;
}

.article .article__info {
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  width: 100%;
  left: 0px;
  background: linear-gradient(to top, rgba(0, 0, 0, .8), transparent);
  color: #FFFFFF;
  padding: .8rem;
}
.article__categories {
  margin-bottom: .5rem;
}

.article__author, .article__date {
  font-size: .6rem;
}

.category__label, .tag {
  display: inline-block;
  margin-right: 5px;
  background-color: #D80000;
  color: #FFFFFF;
  padding: 0 5px;
  font-size: 0.6rem;
  line-height: 1.6;
}

.article-inline {
  display: flex;
  margin-top: .2rem;
  align-items: flex-start;
}
.article-inline__cover-container, .article-inline__info {
    width: 50%;
}

.article-inline__cover {
  display: block;
  width: 100%;
  height: 0;
  padding-bottom: 62%;
  background-position: center;
  background-size: cover;
}

.article-inline__title {
  font-size: 1rem;
}
.article-inline__info {
  padding: 0 .5rem;
}

.article-inline__bottom {
  font-size: .6rem;
  margin-top: .2rem;
  display: flex;
  justify-content: space-between;
}

.no-more {
  color: #797979;
  text-align: center;
  margin: 30rpx 0;
  font-size: .8rem;
}

.comment-container {
  padding-left: 10rpx;
}

.comment-input {
  margin: 40rpx 0;
}

.comment-input-body {
  display: flex;
}
.comment-input.comment-focus {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 0 10rpx;
  margin: 0;
}

.comment-input image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 15rpx;
}

.comment-input textarea {
  width:100%;
  height:80rpx;
  border:1px solid #ccc;
  border-radius:5px;
  vertical-align: center;
}
.comment-input.comment-focus text {
  height: 200rpx;
}

.commment-input-footer {
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
}

.comment-item {
  border-top: 1px solid #797979;
}

.comment-item:first-child {
  border-top: none;
}

.comment-inline {
  display: flex;
  color: #282828;
}

.comment__title {
  margin: 20rpx 0;
}

.comment__avatar {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.comment__author {

}

.comment__create {
  font-size: .6rem;
  margin-top: .2rem;
}

.comment__description {
  margin: 20rpx 0;
}

.comment-response {
  margin-left: 100rpx;
}
