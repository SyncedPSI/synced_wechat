<template name="articleList">
  <view class="article-list">
    <view class="article-inline" wx:for="{{articles.edges}}" wx:key="unique">
      <navigator class="article-inline__cover-container" url="/pages/article/article?id={{item.node.id}}">
        <view class="article-inline__cover"
        style="background-image: url(http://img02.tooopen.com/images/20150928/tooopen_sy_143912755726.jpg)"></view>
      </navigator>
      <view class="article-inline__info">
        <view class="article__categories">
          <text class="category__label" wx:for="{{item.node.categories}}" wx:for-item="category" wx:key="unique">{{category.title || category}}</text>
        </view>
        <navigator class="article-inline__title" url="/pages/article/article?id={{item.node.id}}">{{item.node.title}}</navigator>
        <view class="article-inline__bottom">
          <text>{{item.node.author.name}}</text>
          <text>{{item.node.published_at}}</text>
        </view>
      </view>
    </view>
  </view> 
</template>